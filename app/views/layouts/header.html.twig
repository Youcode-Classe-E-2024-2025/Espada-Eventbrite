      <header id="header" class="bg-white border-b  ">
    <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-8">
                <a href="/" class="flex items-center space-x-3">
                    <img src="/assets/logo/espada.svg" alt="Espada Logo" class="h-10 w-auto">
                </a>
                <nav class="hidden md:flex space-x-6">
                    <a href="/" class="text-gray-700 hover:text-red-600 cursor-pointer">Home</a>
                    {% if session.get('user') %}
                        {% if session.get('user').role_id == 1 or session.get('user').role_id == 3 %}
                        <a href="/dashboard" class="text-gray-700 hover:text-red-600 cursor-pointer">Dashboard</a>
                        {% endif %}
                        {% if session.get('user').role_id == 2%}
                        <a href="/dashboard" class="text-gray-700 hover:text-red-600 cursor-pointer">Profile</a>
                        {% endif %}
                    {% endif %}
                    <a href="/events/list" class="text-gray-700 hover:text-red-600 cursor-pointer">Browse Events</a>
                </nav>
            </div>
            <div class="flex items-center space-x-4">
                {% if session.get('user') %}
                    <div class="relative">
                        <button id="notif_btn" class="text-gray-700 hover:text-red-600 relative">
                            <i class="fa-regular fa-bell text-xl"></i>
                            <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs w-4 h-4 flex items-center justify-center rounded-full">3</span>
                        </button>
                        <div id="notifications-popup" class="hidden absolute right-0 mt-2 w-80 bg-white rounded-lg shadow-lg border border-gray-200 z-50">
                            <div class="p-4 border-b border-gray-200">
                                <h3 class="text-lg font-semibold">Notifications</h3>
                            </div>
                            <div class="max-h-96 overflow-y-auto">
                                <div class="p-4 border-b border-gray-100 hover:bg-gray-50">
                                    <div class="flex items-start">
                                        <div class="flex-shrink-0">
                                            <span class="inline-block p-2 rounded-full bg-blue-100 text-blue-600">
                                                <i class="fa-solid fa-ticket text-lg"></i>
                                            </span>
                                        </div>
                                        <div class="ml-3">
                                            <p class="text-sm font-medium text-gray-900">New ticket purchase</p>
                                            <p class="text-sm text-gray-500">John Doe purchased 2 tickets for Tech Conference 2024</p>
                                            <p class="mt-1 text-xs text-gray-400">2 hours ago</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="p-4 border-b border-gray-100 hover:bg-gray-50">
                                    <div class="flex items-start">
                                        <div class="flex-shrink-0">
                                            <span class="inline-block p-2 rounded-full bg-green-100 text-green-600">
                                                <i class="fa-solid fa-calendar-check text-lg"></i>
                                            </span>
                                        </div>
                                        <div class="ml-3">
                                            <p class="text-sm font-medium text-gray-900">Event reminder</p>
                                            <p class="text-sm text-gray-500">Your event "Marketing Workshop" starts in 24 hours</p>
                                            <p class="mt-1 text-xs text-gray-400">5 hours ago</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="p-4 hover:bg-gray-50">
                                    <div class="flex items-start">
                                        <div class="flex-shrink-0">
                                            <span class="inline-block p-2 rounded-full bg-yellow-100 text-yellow-600">
                                                <i class="fa-solid fa-star text-lg"></i>
                                            </span>
                                        </div>
                                        <div class="ml-3">
                                            <p class="text-sm font-medium text-gray-900">New review</p>
                                            <p class="text-sm text-gray-500">You received a 5-star review for "Design Workshop"</p>
                                            <p class="mt-1 text-xs text-gray-400">1 day ago</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                   <a href="/dashboard"><img src="{{session.get('user').avatar}}" alt="Profile" class="w-10 h-10 rounded-full"></a> 
                    <a href="/auth/logout" class="text-red-700 hover:text-red-600" title="Logout">
                        <i class="fa-solid fa-right-from-bracket text-xl"></i>
                    </a>
                {% else %}
                    <div class="flex items-center space-x-4">
                        <a href="/auth#signin-form" class="px-6 py-2 border-2 border-black text-black rounded-lg font-semibold hover:bg-gray-800 hover:text-white transition-all duration-300 ease-in-out flex items-center justify-center space-x-2 group">
                            <span>Sign In</span>
                            <i class="fa-solid fa-arrow-right-to-bracket ml-2 transform group-hover:translate-x-1 transition-transform duration-300"></i>
                        </a>
                        <a href="/auth#signup-form" class="px-6 py-2 bg-black text-white rounded-lg hover:from-gray-800  transition-all duration-300 ease-in-out flex items-center justify-center space-x-2 group">
                            <span>Sign Up</span>
                            <i class="fa-solid fa-user-plus ml-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></i>
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</header>