{% extends "back/dashboard.html.twig"%}
{% block aside %} 
    <aside id="sidebar" class="w-64 bg-gray-900 text-white h-full fixed left-0">
        <div class="p-4">
            <div class="flex items-center space-x-2 mb-6">
                <i class="fa-solid fa-bolt text-yellow-400 text-2xl"></i>
                <span class="text-xl font-bold">AdminPanel</span>
            </div>
            <nav class="space-y-2">
                <a href="/dashboard" class="flex items-center space-x-2 hover:bg-gray-800 p-3 rounded-lg">
                    <i class="fa-solid fa-gauge-high"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/users" class="flex items-center space-x-2 hover:bg-gray-800 p-3 rounded-lg">
                    <i class="fa-solid fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="/admin/events" class="flex items-center space-x-2 hover:bg-gray-800 p-3 rounded-lg">
                    <i class="fa-solid fa-calendar-check"></i>
                    <span>Events</span>
                </a>
                <a href="/admin/comments" class="flex items-center space-x-2 bg-gray-800 p-3 rounded-lg">
                    <i class="fa-solid fa-comments"></i>
                    <span>Comments</span>
                </a>
                <a href="#" class="flex items-center space-x-2 hover:bg-gray-800 p-3 rounded-lg">
                    <i class="fa-solid fa-chart-pie"></i>
                    <span>Reports</span>
                </a>
            </nav>
        </div>
    </aside>
    {% endblock %}
 {% block mainContent %}
        <div id="comments-filters" class="bg-white p-6 rounded-xl shadow mb-6">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-4">
                    <div class="relative">
                        <input type="text" placeholder="Search comments..." class="pl-10 pr-4 py-2 border rounded-lg w-64">
                        <i class="fa-solid fa-search absolute left-3 top-3 text-gray-400"></i>
                    </div>
                    <select class="border rounded-lg px-4 py-2">
                        <option>All Status</option>
                        <option>Pending</option>
                        <option>Approved</option>
                        <option>Flagged</option>
                    </select>
                    <select class="border rounded-lg px-4 py-2">
                        <option>Latest First</option>
                        <option>Oldest First</option>
                        <option>Most Reported</option>
                    </select>
                </div>
                <button class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
                    <i class="fa-solid fa-filter mr-2"></i>Apply Filters
                </button>
            </div>
        </div>
        <div id="comments-list" class="bg-white rounded-xl shadow">
            <div class="p-6 border-b">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-xl font-bold">Recent Comments</h2>
                    <div class="flex items-center space-x-2">
                        <span class="text-sm text-gray-500">Showing 1-10 of 234</span>
                        <button class="p-2 hover:bg-gray-100 rounded-lg">
                            <i class="fa-solid fa-refresh"></i>
                        </button>
                    </div>
                </div>
                <div class="space-y-6">
                    <div class="border rounded-lg p-4 hover:bg-gray-50">
                        <div class="flex items-start justify-between">
                            <div class="flex space-x-4">
                                <img src="https://storage.googleapis.com/uxpilot-auth.appspot.com/avatars/avatar-2.jpg" class="w-10 h-10 rounded-full">
                                <div>
                                    <div class="flex items-center space-x-2">
                                        <span class="font-medium">Sarah Johnson</span>
                                        <span class="text-sm text-gray-500">2 minutes ago</span>
                                        <span class="px-2 py-1 text-xs bg-yellow-100 text-yellow-800 rounded-full">Pending</span>
                                    </div>
                                    <p class="mt-2 text-gray-700">Great event! The organization was perfect and the speakers were amazing. Looking forward to the next one!</p>
                                    <div class="mt-2 flex items-center space-x-4 text-sm text-gray-500">
                                        <span>On: Tech Conference 2025</span>
                                        <button class="hover:text-blue-500">
                                            <i class="fa-solid fa-reply mr-1"></i>Reply
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="flex space-x-2">
                                <button class="p-2 text-green-500 hover:bg-green-50 rounded-lg">
                                    <i class="fa-solid fa-check"></i>
                                </button>
                                <button class="p-2 text-red-500 hover:bg-red-50 rounded-lg">
                                    <i class="fa-solid fa-xmark"></i>
                                </button>
                                <button class="p-2 text-gray-500 hover:bg-gray-100 rounded-lg">
                                    <i class="fa-solid fa-ellipsis-v"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="border rounded-lg p-4 hover:bg-gray-50">
                        <div class="flex items-start justify-between">
                            <div class="flex space-x-4">
                                <img src="https://storage.googleapis.com/uxpilot-auth.appspot.com/avatars/avatar-3.jpg" class="w-10 h-10 rounded-full">
                                <div>
                                    <div class="flex items-center space-x-2">
                                        <span class="font-medium">Mike Peters</span>
                                        <span class="text-sm text-gray-500">15 minutes ago</span>
                                        <span class="px-2 py-1 text-xs bg-red-100 text-red-800 rounded-full">Flagged</span>
                                    </div>
                                    <p class="mt-2 text-gray-700">[Comment hidden due to reports]</p>
                                    <div class="mt-2 flex items-center space-x-4 text-sm text-gray-500">
                                        <span>On: Summer Music Festival</span>
                                        <span class="text-red-500">
                                            <i class="fa-solid fa-flag mr-1"></i>5 reports
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="flex space-x-2">
                                <button class="p-2 text-green-500 hover:bg-green-50 rounded-lg">
                                    <i class="fa-solid fa-check"></i>
                                </button>
                                <button class="p-2 text-red-500 hover:bg-red-50 rounded-lg">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                                <button class="p-2 text-gray-500 hover:bg-gray-100 rounded-lg">
                                    <i class="fa-solid fa-ellipsis-v"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="border rounded-lg p-4 hover:bg-gray-50">
                        <div class="flex items-start justify-between">
                            <div class="flex space-x-4">
                                <img src="https://storage.googleapis.com/uxpilot-auth.appspot.com/avatars/avatar-4.jpg" class="w-10 h-10 rounded-full">
                                <div>
                                    <div class="flex items-center space-x-2">
                                        <span class="font-medium">Emily Chen</span>
                                        <span class="text-sm text-gray-500">1 hour ago</span>
                                        <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded-full">Approved</span>
                                    </div>
                                    <p class="mt-2 text-gray-700">The venue was perfect for this type of event. The acoustics were amazing!</p>
                                    <div class="mt-2 flex items-center space-x-4 text-sm text-gray-500">
                                        <span>On: Classical Music Night</span>
                                        <button class="hover:text-blue-500">
                                            <i class="fa-solid fa-reply mr-1"></i>Reply
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="flex space-x-2">
                                <button class="p-2 text-gray-500 hover:bg-gray-100 rounded-lg">
                                    <i class="fa-solid fa-ellipsis-v"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="p-4 border-t flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <select class="border rounded-lg px-3 py-1">
                        <option>10 per page</option>
                        <option>25 per page</option>
                        <option>50 per page</option>
                    </select>
                    <span class="text-sm text-gray-500">Showing 1-10 of 234 comments</span>
                </div>
                <div class="flex space-x-2">
                    <button class="px-3 py-1 border rounded-lg hover:bg-gray-50">Previous</button>
                    <button class="px-3 py-1 bg-blue-500 text-white rounded-lg">1</button>
                    <button class="px-3 py-1 border rounded-lg hover:bg-gray-50">2</button>
                    <button class="px-3 py-1 border rounded-lg hover:bg-gray-50">3</button>
                    <button class="px-3 py-1 border rounded-lg hover:bg-gray-50">Next</button>
                </div>
            </div>
        </div>
   {% endblock %}
          