       {% extends "dashboard.html.twig"%}
{% block content %}
        <div id="users-controls" class="flex justify-between items-center mb-6">
            <div class="flex space-x-4">
                <div class="relative">
                    <input type="text" placeholder="Search users..." class="pl-10 pr-4 py-2 border rounded-lg w-64">
                    <i class="fa-solid fa-search absolute left-3 top-3 text-gray-400"></i>
                </div>
                <select class="border rounded-lg px-4 py-2">
                    <option>All Roles</option>
                    <option>Admin</option>
                    <option>User</option>
                    <option>Moderator</option>
                </select>
                <select class="border rounded-lg px-4 py-2">
                    <option>Status</option>
                    <option>Active</option>
                    <option>Inactive</option>
                    <option>Suspended</option>
                </select>
            </div>
            <button class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
                <i class="fa-solid fa-plus mr-2"></i>Add New User
            </button>
        </div>
        <div id="users-table" class="bg-white rounded-xl shadow overflow-hidden">
            <table class="w-full">
                <thead class="bg-gray-50 border-b">
                    <tr>
                        <th class="px-6 py-4 text-left text-sm font-medium text-gray-500">User</th>
                        <th class="px-6 py-4 text-left text-sm font-medium text-gray-500">Role</th>
                        <th class="px-6 py-4 text-left text-sm font-medium text-gray-500">Status</th>
                        <th class="px-6 py-4 text-left text-sm font-medium text-gray-500">Last Login</th>
                        <th class="px-6 py-4 text-left text-sm font-medium text-gray-500">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="flex items-center space-x-3">
                                <img src="https://storage.googleapis.com/uxpilot-auth.appspot.com/avatars/avatar-2.jpg" class="w-8 h-8 rounded-full">
                                <div>
                                    <p class="font-medium">Sarah Johnson</p>
                                    <p class="text-sm text-gray-500">sarah@example.com</p>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-sm">Admin</span>
                        </td>
                        <td class="px-6 py-4">
                            <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-sm">Active</span>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">2 minutes ago</td>
                        <td class="px-6 py-4">
                            <div class="flex space-x-2">
                                <button class="text-gray-400 hover:text-blue-500"><i class="fa-solid fa-pen-to-square"></i></button>
                                <button class="text-gray-400 hover:text-red-500"><i class="fa-solid fa-trash"></i></button>
                            </div>
                        </td>
                    </tr>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="flex items-center space-x-3">
                                <img src="https://storage.googleapis.com/uxpilot-auth.appspot.com/avatars/avatar-3.jpg" class="w-8 h-8 rounded-full">
                                <div>
                                    <p class="font-medium">Michael Smith</p>
                                    <p class="text-sm text-gray-500">michael@example.com</p>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="bg-purple-100 text-purple-800 px-2 py-1 rounded-full text-sm">Moderator</span>
                        </td>
                        <td class="px-6 py-4">
                            <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full text-sm">Pending</span>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">1 hour ago</td>
                        <td class="px-6 py-4">
                            <div class="flex space-x-2">
                                <button class="text-gray-400 hover:text-blue-500"><i class="fa-solid fa-pen-to-square"></i></button>
                                <button class="text-gray-400 hover:text-red-500"><i class="fa-solid fa-trash"></i></button>
                            </div>
                        </td>
                    </tr>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="flex items-center space-x-3">
                                <img src="https://storage.googleapis.com/uxpilot-auth.appspot.com/avatars/avatar-4.jpg" class="w-8 h-8 rounded-full">
                                <div>
                                    <p class="font-medium">Emily Brown</p>
                                    <p class="text-sm text-gray-500">emily@example.com</p>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded-full text-sm">User</span>
                        </td>
                        <td class="px-6 py-4">
                            <span class="bg-red-100 text-red-800 px-2 py-1 rounded-full text-sm">Suspended</span>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">2 days ago</td>
                        <td class="px-6 py-4">
                            <div class="flex space-x-2">
                                <button class="text-gray-400 hover:text-blue-500"><i class="fa-solid fa-pen-to-square"></i></button>
                                <button class="text-gray-400 hover:text-red-500"><i class="fa-solid fa-trash"></i></button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div id="pagination" class="flex justify-between items-center mt-6">
            <p class="text-sm text-gray-500">Showing 1 to 3 of 100 entries</p>
            <div class="flex space-x-2">
                <button class="px-3 py-1 border rounded hover:bg-gray-50">Previous</button>
                <button class="px-3 py-1 border rounded bg-blue-500 text-white">1</button>
                <button class="px-3 py-1 border rounded hover:bg-gray-50">2</button>
                <button class="px-3 py-1 border rounded hover:bg-gray-50">3</button>
                <button class="px-3 py-1 border rounded hover:bg-gray-50">Next</button>
            </div>
        </div>
{% endblock %}