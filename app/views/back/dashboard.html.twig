{% extends "base.html.twig" %}

  {% block content %}        
            <div id="admin-dashboard" class="flex h-full bg-gray-100">
    {% block aside %} {% endblock %}
    <main id="main-content" class="ml-64 flex-1 p-8">
        <header id="header" class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-2xl font-bold">Dashboard Overview</h1>
                <p class="text-gray-600">Welcome back, {{session.get('user').username}}</p>
            </div>
            <div class="flex items-center space-x-4">
                <div class="relative">
                        <button id="notif_btn" class="text-gray-700 hover:text-indigo-600 relative">
                            <i class="fa-regular fa-bell text-xl"></i>
                            <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs w-4 h-4 flex items-center justify-center rounded-full">{{ notif|length }}</span>
                        </button>
                        <div id="notifications-popup" class="hidden absolute right-0 mt-2 w-80 bg-white rounded-lg shadow-lg border border-gray-200 z-50">
                            <div class="p-4 border-b border-gray-200">
                                <h3 class="text-lg font-semibold">Notifications</h3>
                            </div>
                            <div class="max-h-96 overflow-y-auto">
                                 {% for notification in notif %}
    <div class="p-4 border-b border-gray-100 hover:bg-gray-50">
        <div class="flex items-start">
            <div class="flex-shrink-0">
                <span class="inline-block p-2 rounded-full bg-blue-100 text-blue-600">
                    <i class="fa-solid fa-ticket text-lg"></i>
                </span>
            </div>
            <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">{{ notification.from_username }}</p>
                <p class="text-sm text-gray-500">{{ notification.message }}</p>
                <p class="mt-1 text-xs text-gray-400">Just now</p>
            </div>
        </div>
    </div>
{% endfor %}
                            </div>
                        </div>
                    </div>
                <div class="flex items-center space-x-2">
                    <img src="{{session.get('user').avatar}}" class="w-10 h-10 rounded-full">
                    <span class="font-medium">{{session.get('user').username}}</span>
                    <a href="/auth/logout" class="text-red-700 hover:text-red-600" title="Logout">
                        <i class="fa-solid fa-right-from-bracket text-xl"></i>
                    </a>
                </div>
            </div>
        </header>
      {% block mainContent %}  {% endblock %} 
    </main>
</div> 
{% endblock %}
