{% extends "base.html.twig" %}
{% block content %}
 <section id="event-hero" class="mb-12">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div class="flex space-x-3">
            <span class="inline-block px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">Available</span>
            <span class="inline-block px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full text-sm">Selling Fast</span>
          </div>
          <h1 class="text-4xl font-bold text-gray-900">Tech Conference 2025</h1>
          <p class="text-gray-600">Join us for the biggest tech conference of the year featuring industry leaders and innovative workshops.</p>
          <div class="flex items-center space-x-4">
            <div class="flex items-center text-gray-600">
              <i class="fa-regular fa-calendar mr-2"></i>
              <span>March 15-17, 2025</span>
            </div>
            <div class="flex items-center text-gray-600">
              <i class="fa-solid fa-location-dot mr-2"></i>
              <span>Convention Center, New York</span>
            </div>
          </div>
          <div class="grid grid-cols-3 gap-4 pt-4">
            <div class="bg-white p-4 rounded-lg text-center">
              <div class="text-2xl font-bold text-indigo-600">750</div>
              <div class="text-sm text-gray-600">Tickets Sold</div>
            </div>
            <div class="bg-white p-4 rounded-lg text-center">
              <div class="text-2xl font-bold text-indigo-600">250</div>
              <div class="text-sm text-gray-600">Available</div>
            </div>
            <div class="bg-white p-4 rounded-lg text-center">
              <div class="text-2xl font-bold text-indigo-600">1000</div>
              <div class="text-sm text-gray-600">Total Capacity</div>
            </div>
          </div>
        </div>
        <div class="rounded-xl overflow-hidden">
          <img class="w-full h-[400px] object-cover" src="https://storage.googleapis.com/uxpilot-auth.appspot.com/afc6dbb14c-4c83c08a83d2a682383f.png" alt="modern tech conference hall with people networking, professional event photography style">
        </div>
      </div>
    </section>
    <section id="ticket-options" class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Select Your Ticket</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:border-indigo-600 transition">
          <div class="flex justify-between items-center mb-4">
            <h3 class="font-bold text-xl">Early Bird</h3>
            <span class="text-indigo-600 font-bold">$299</span>
          </div>
          <div class="mb-4">
            <div class="flex justify-between text-sm text-gray-600 mb-2">
              <span>Available</span>
              <span>15 tickets left</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-green-500 h-2 rounded-full" style="width: 15%"></div>
            </div>
          </div>
          <ul class="space-y-3 mb-6">
            <li class="flex items-center"><i class="fa-solid fa-check text-green-500 mr-2"></i> General admission</li>
            <li class="flex items-center"><i class="fa-solid fa-check text-green-500 mr-2"></i> Conference materials</li>
            <li class="flex items-center"><i class="fa-solid fa-check text-green-500 mr-2"></i> Coffee breaks</li>
          </ul>
          <button class="w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700">Select Ticket</button>
        </div>
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:border-indigo-600 transition">
          <div class="flex justify-between items-center mb-4">
            <h3 class="font-bold text-xl">Regular</h3>
            <span class="text-indigo-600 font-bold">$499</span>
          </div>
          <div class="mb-4">
            <div class="flex justify-between text-sm text-gray-600 mb-2">
              <span>Available</span>
              <span>185 tickets left</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-green-500 h-2 rounded-full" style="width: 63%"></div>
            </div>
          </div>
          <ul class="space-y-3 mb-6">
            <li class="flex items-center"><i class="fa-solid fa-check text-green-500 mr-2"></i> All Early Bird features</li>
            <li class="flex items-center"><i class="fa-solid fa-check text-green-500 mr-2"></i> Lunch included</li>
            <li class="flex items-center"><i class="fa-solid fa-check text-green-500 mr-2"></i> Networking event</li>
          </ul>
          <button class="w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700">Select Ticket</button>
        </div>
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:border-indigo-600 transition">
          <div class="flex justify-between items-center mb-4">
            <h3 class="font-bold text-xl">VIP</h3>
            <span class="text-indigo-600 font-bold">$899</span>
          </div>
          <div class="mb-4">
            <div class="flex justify-between text-sm text-gray-600 mb-2">
              <span>Available</span>
              <span>50 tickets left</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-green-500 h-2 rounded-full" style="width: 50%"></div>
            </div>
          </div>
          <ul class="space-y-3 mb-6">
            <li class="flex items-center"><i class="fa-solid fa-check text-green-500 mr-2"></i> All Regular features</li>
            <li class="flex items-center"><i class="fa-solid fa-check text-green-500 mr-2"></i> VIP lounge access</li>
            <li class="flex items-center"><i class="fa-solid fa-check text-green-500 mr-2"></i> Speaker dinner</li>
          </ul>
          <button class="w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700">Select Ticket</button>
        </div>
      </div>
    </section>
    <section id="event-details-content" class="mb-12">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="md:col-span-2 space-y-6">
          <div>
            <h2 class="text-2xl font-bold mb-4">About the Event</h2>
            <p class="text-gray-600">Join industry leaders and innovators for three days of cutting-edge technology discussions, workshops, and networking opportunities. The conference will cover AI, blockchain, cloud computing, and more.</p>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">What to Expect</h3>
            <ul class="space-y-3">
              <li class="flex items-center"><i class="fa-solid fa-microphone text-indigo-600 mr-3"></i> Keynote speakers</li>
              <li class="flex items-center"><i class="fa-solid fa-users text-indigo-600 mr-3"></i> Interactive workshops</li>
              <li class="flex items-center"><i class="fa-solid fa-rocket text-indigo-600 mr-3"></i> Startup showcase</li>
              <li class="flex items-center"><i class="fa-solid fa-handshake text-indigo-600 mr-3"></i> Networking sessions</li>
            </ul>
          </div>
        </div>
        <div class="bg-white p-6 rounded-xl shadow-sm">
          <h3 class="text-xl font-bold mb-4">Event Details</h3>
          <div class="space-y-4">
            <div>
              <p class="text-gray-500 text-sm">Date & Time</p>
              <p class="font-medium">March 15-17, 2025</p>
              <p class="font-medium">9:00 AM - 6:00 PM</p>
            </div>
            <div>
              <p class="text-gray-500 text-sm">Location</p>
              <p class="font-medium">Convention Center</p>
              <p class="text-gray-600">123 Tech Avenue, New York, NY</p>
            </div>
            <div>
              <p class="text-gray-500 text-sm">Event Stats</p>
              <div class="grid grid-cols-2 gap-4 mt-2">
                <div>
                  <p class="font-medium">Total Capacity</p>
                  <p class="text-gray-600">1000 attendees</p>
                </div>
                <div>
                  <p class="font-medium">Tickets Sold</p>
                  <p class="text-gray-600">750 (75%)</p>
                </div>
                <div>
                  <p class="font-medium">Available Tickets</p>
                  <p class="text-gray-600">250 remaining</p>
                </div>
                <div>
                  <p class="font-medium">Countries</p>
                  <p class="text-gray-600">25+ represented</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  {% endblock %}
   