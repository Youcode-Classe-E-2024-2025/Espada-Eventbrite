{% extends "base.html.twig" %}
{% block header %} {% include "layouts/header.html.twig" %}  {% endblock %}
{% block content %}
  <section id="browse-events" class="py-4">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row gap-8">
        <div class="w-full md:w-64 space-y-6">
          <div class="bg-white rounded-lg p-4 shadow-sm">
            <h3 class="font-bold text-lg mb-4">Filters</h3>
            <div class="space-y-4">
              <div>
                <label class="text-sm font-medium text-gray-700 block mb-2">Date Range</label>
                <div class="space-y-2">
                  <input type="date" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500">
                  <input type="date" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500">
                </div>
              </div>
              <div>
                <label class="text-sm font-medium text-gray-700 block mb-2">Price Range</label>
                <div class="flex items-center gap-2">
                  <input type="number" placeholder="Min" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500">
                  <span>-</span>
                  <input type="number" placeholder="Max" class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500">
                </div>
              </div>
              <div>
                <label class="text-sm font-medium text-gray-700 block mb-2">Event Type</label>
                <div class="space-y-2">
                  <label class="flex items-center">
                    <input type="checkbox" class="text-indigo-600 rounded">
                    <span class="ml-2 text-sm">Music</span>
                  </label>
                  <label class="flex items-center">
                    <input type="checkbox" class="text-indigo-600 rounded">
                    <span class="ml-2 text-sm">Technology</span>
                  </label>
                  <label class="flex items-center">
                    <input type="checkbox" class="text-indigo-600 rounded">
                    <span class="ml-2 text-sm">Food & Drink</span>
                  </label>
                  <label class="flex items-center">
                    <input type="checkbox" class="text-indigo-600 rounded">
                    <span class="ml-2 text-sm">Sports</span>
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="flex-1">
          <div class="bg-white rounded-lg p-4 shadow-sm mb-6">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
              <form action="events/search" action="post" class="relative flex-1">
                <i class="fa-solid fa-search absolute left-3 top-3 text-gray-400"></i>
                <input type="text" name="keyword" placeholder="Search events..." class="w-full pl-10 pr-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500">
              </form>
              <div class="flex items-center gap-4">
                <div class="flex items-center gap-2">
                  <span class="text-sm text-gray-600">Sort by:</span>
                  <select class="border rounded-lg px-3 py-2">
                    <option>Date</option>
                    <option>Price</option>
                    <option>Popularity</option>
                  </select>
                </div>
                <div class="flex gap-2">
                  <button class="p-2 border rounded-lg hover:bg-gray-50">
                    <i class="fa-solid fa-list"></i>
                  </button>
                  <button class="p-2 border rounded-lg bg-indigo-50 text-indigo-600">
                    <i class="fa-solid fa-grid-2"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {% for event in events %}
                <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow">
                <div class="relative">
                  <img class="w-full h-48 object-cover" src="{{ event.visual_content }}" alt="{{ event.title }}">
                  <span class="absolute top-4 right-4 bg-green-500 text-white px-3 py-1 rounded-full text-sm">Available</span>
                </div>
                <div class="p-6">
                  <div class="flex items-center text-sm text-gray-500 mb-2">
                    <i class="fa-regular fa-calendar mr-2"></i>
                    <span>{{  event.date }}</span>
                    <i class="fa-solid fa-location-dot ml-4 mr-2"></i>
                    <span>{{ event.lieu }}</span>
                  </div>
                  <h4 class="text-xl font-bold mb-2">{{ event.title }}</h4>
                  <p class="text-gray-600 mb-4">{{ event.description }}</p>
                  <div class="flex items-center justify-between">
                    {# <span class="text-indigo-600 font-bold">${{  event.price }}</span> #}
                    <button class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">Book Now</button>
                  </div>
                </div>
              </div>
            {% endfor %}
            {# <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow">
              <div class="relative">
                <img class="w-full h-48 object-cover" src="https://storage.googleapis.com/uxpilot-auth.appspot.com/ddad521685-c419be52d590c18caf33.png" alt="music festival">
                <span class="absolute top-4 right-4 bg-yellow-500 text-white px-3 py-1 rounded-full text-sm">Selling Fast</span>
              </div>
              <div class="p-6">
                <div class="flex items-center text-sm text-gray-500 mb-2">
                  <i class="fa-regular fa-calendar mr-2"></i>
                  <span>Apr 20, 2025</span>
                  <i class="fa-solid fa-location-dot ml-4 mr-2"></i>
                  <span>Los Angeles</span>
                </div>
                <h4 class="text-xl font-bold mb-2">Summer Music Festival</h4>
                <p class="text-gray-600 mb-4">Three days of non-stop music and entertainment</p>
                <div class="flex items-center justify-between">
                  <span class="text-indigo-600 font-bold">$149</span>
                  <button class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">Book Now</button>
                </div>
              </div>
            </div> #}
          </div>
          <div class="mt-8 flex items-center justify-between">
            <div class="text-sm text-gray-600">
              Showing 1-10 of 48 events
            </div>
            <div class="flex gap-2">
              <button class="px-4 py-2 border rounded-lg hover:bg-gray-50 disabled:opacity-50" disabled>
                <i class="fa-solid fa-arrow-left mr-2"></i>Previous
              </button>
              <button class="px-4 py-2 border rounded-lg hover:bg-gray-50">
                Next<i class="fa-solid fa-arrow-right ml-2"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  {% endblock %}
{% block footer %} {% include "layouts/footer.html.twig" %}  {% endblock %}