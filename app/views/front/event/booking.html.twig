{% extends "base.html.twig" %}
{% block content %}
                <div id="booking-page" class="max-w-7xl mx-auto px-4 py-8">
    <div id="event-header" class="mb-10">
        <h1 class="text-4xl font-bold mb-4">Tech Conference 2025</h1>
        <div class="flex items-center gap-4 text-gray-600">
            <span class="flex items-center"><i class="fa-regular fa-calendar mr-2"></i>March 15, 2025</span>
            <span class="flex items-center"><i class="fa-regular fa-clock mr-2"></i>9:00 AM - 6:00 PM</span>
            <span class="flex items-center"><i class="fa-solid fa-location-dot mr-2"></i>Convention Center, New York</span>
        </div>
    </div>
    <div class="grid md:grid-cols-3 gap-8">
        <div id="ticket-options" class="md:col-span-2 space-y-6">
            <div class="bg-white rounded-xl shadow-sm border p-6">
                <h2 class="text-2xl font-bold mb-6">Select Your Ticket</h2>
                <div class="space-y-4">
                    <div class="flex items-center justify-between p-4 border rounded-lg hover:border-blue-500 cursor-pointer">
                        <div class="flex-1">
                            <h3 class="font-semibold text-lg">Standard Access</h3>
                            <p class="text-gray-600">Basic conference access</p>
                        </div>
                        <div class="text-right">
                            <p class="text-2xl font-bold">$99</p>
                            <select class="mt-2 border rounded p-2">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                            </select>
                        </div>
                    </div>
                    <div class="flex items-center justify-between p-4 border rounded-lg hover:border-blue-500 cursor-pointer bg-blue-50">
                        <div class="flex-1">
                            <div class="flex items-center gap-2">
                                <h3 class="font-semibold text-lg">VIP Access</h3>
                                <span class="bg-blue-500 text-white text-xs px-2 py-1 rounded">BEST VALUE</span>
                            </div>
                            <p class="text-gray-600">Premium seating + Workshop access</p>
                        </div>
                        <div class="text-right">
                            <p class="text-2xl font-bold">$199</p>
                            <select class="mt-2 border rounded p-2">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                            </select>
                        </div>
                    </div>
                    <div class="flex items-center justify-between p-4 border rounded-lg hover:border-blue-500 cursor-pointer opacity-50">
                        <div class="flex-1">
                            <h3 class="font-semibold text-lg">Early Bird</h3>
                            <p class="text-gray-600">Limited time offer</p>
                            <span class="text-red-500 text-sm">Sold Out</span>
                        </div>
                        <div class="text-right">
                            <p class="text-2xl font-bold">$79</p>
                            <select class="mt-2 border rounded p-2" disabled>
                                <option>0</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div id="payment-section" class="bg-white rounded-xl shadow-sm border p-6">
                <h2 class="text-2xl font-bold mb-6">Payment Details</h2>
                <div class="space-y-4">
                    <div class="flex gap-4">
                        <button class="flex-1 py-3 border rounded-lg hover:bg-gray-50">
                            <i class="fa-brands fa-cc-stripe text-2xl"></i>
                        </button>
                        <button class="flex-1 py-3 border rounded-lg hover:bg-gray-50">
                            <i class="fa-brands fa-paypal text-2xl"></i>
                        </button>
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <input type="text" placeholder="Card Number" class="col-span-2 border rounded-lg p-3">
                        <input type="text" placeholder="MM/YY" class="border rounded-lg p-3">
                        <input type="text" placeholder="CVC" class="border rounded-lg p-3">
                    </div>
                </div>
            </div>
        </div>
        <div id="order-summary" class="bg-white rounded-xl shadow-sm border p-6 h-fit">
            <h2 class="text-2xl font-bold mb-6">Order Summary</h2>
            <div class="space-y-4">
                <div class="flex justify-between">
                    <span>VIP Access (x1)</span>
                    <span>$199.00</span>
                </div>
                <div class="flex justify-between">
                    <span>Standard Access (x1)</span>
                    <span>$99.00</span>
                </div>
                <div class="flex justify-between text-sm text-gray-600">
                    <span>Processing Fee</span>
                    <span>$5.99</span>
                </div>
                <div class="border-t pt-4">
                    <div class="flex justify-between font-bold text-lg">
                        <span>Total</span>
                        <span>$303.99</span>
                    </div>
                </div>
                <button class="w-full bg-blue-600 text-white py-4 rounded-lg font-semibold hover:bg-blue-700">
                    Complete Booking
                </button>
                <p class="text-xs text-gray-500 text-center">By completing this booking you agree to our terms of service and cancellation policy</p>
            </div>
        </div>
    </div>
    <div id="cancellation-policy" class="mt-12 bg-gray-50 rounded-xl p-6">
        <h3 class="text-xl font-bold mb-4">Cancellation Policy</h3>
        <div class="grid md:grid-cols-3 gap-6">
            <div class="flex items-start gap-3">
                <i class="fa-regular fa-calendar-xmark text-blue-600 text-xl mt-1"></i>
                <div>
                    <h4 class="font-semibold">Full Refund</h4>
                    <p class="text-gray-600 text-sm">Cancel up to 7 days before the event</p>
                </div>
            </div>
            <div class="flex items-start gap-3">
                <i class="fa-solid fa-receipt text-blue-600 text-xl mt-1"></i>
                <div>
                    <h4 class="font-semibold">Partial Refund</h4>
                    <p class="text-gray-600 text-sm">50% refund between 7-3 days before the event</p>
                </div>
            </div>
            <div class="flex items-start gap-3">
                <i class="fa-solid fa-ban text-blue-600 text-xl mt-1"></i>
                <div>
                    <h4 class="font-semibold">No Refund</h4>
                    <p class="text-gray-600 text-sm">No refund for cancellations less than 3 days before</p>
                </div>
            </div>
        </div>
    </div> 
</div>
{% endblock %}