 {% extends "base.html.twig" %}
 {% block title %}ESPADA{% endblock %}
{% block content %}
  <header id="header" class="bg-white shadow-sm fixed w-full z-50">
    <div class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-8">
          <h1 class="text-2xl font-bold text-indigo-600">ESPADA</h1>
          <nav class="hidden md:flex space-x-6">
            <span  class="text-gray-700 hover:text-indigo-600 cursor-pointer">Browse Events</span>
            <span  class="text-gray-700 hover:text-indigo-600 cursor-pointer">Categories</span>
            <span  class="text-gray-700 hover:text-indigo-600 cursor-pointer">Create Event</span>
          </nav>
        </div>
        <div class="flex items-center space-x-4">
          <button class="px-4 py-2 text-indigo-600 hover:text-indigo-700">Login</button>
          <button class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">Sign Up</button>
        </div>
      </div>
    </div>
  </header>
  <section id="hero" class="pt-24 pb-12 bg-gradient-to-r from-indigo-500 to-purple-600">
    <div class="container mx-auto px-4">
      <div class="text-center mb-8">
        <h2 class="text-4xl font-bold text-white mb-4">Discover Amazing Events</h2>
        <p class="text-white/80 text-lg">Find and join events that match your interests</p>
      </div>
      <div class="max-w-3xl mx-auto">
        <div class="bg-white rounded-xl shadow-lg p-4">
          <div class="flex flex-col md:flex-row gap-4">
            <div class="flex-1">
              <div class="relative">
                <i class="fa-solid fa-search absolute left-3 top-3 text-gray-400"></i>
                <input type="text" placeholder="Search events..." class="w-full pl-10 pr-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
              </div>
            </div>
            <div class="flex gap-2">
              <button class="px-4 py-2 border rounded-lg hover:bg-gray-50">
                <i class="fa-solid fa-calendar-days mr-2"></i>Date
              </button>
              <button class="px-4 py-2 border rounded-lg hover:bg-gray-50">
                <i class="fa-solid fa-location-dot mr-2"></i>Location
              </button>
              <button class="px-4 py-2 border rounded-lg hover:bg-gray-50">
                <i class="fa-solid fa-tag mr-2"></i>Category
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="featured-events" class="py-12">
    <div class="container mx-auto px-4">
      <h3 class="text-2xl font-bold mb-8">Featured Events</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow">
          <div class="relative">
            <img class="w-full h-48 object-cover" src="https://storage.googleapis.com/uxpilot-auth.appspot.com/eff23b311d-7de2695bdac677903375.png" alt="tech conference event with people networking in a modern venue, professional photography" >
            <span class="absolute top-4 right-4 bg-red-500 text-white px-3 py-1 rounded-full text-sm">Featured</span>
          </div>
          <div class="p-6">
            <div class="flex items-center text-sm text-gray-500 mb-2">
              <i class="fa-regular fa-calendar mr-2"></i>
              <span>Mar 15, 2025</span>
              <i class="fa-solid fa-location-dot ml-4 mr-2"></i>
              <span>San Francisco</span>
            </div>
            <h4 class="text-xl font-bold mb-2">Tech Innovation Summit 2025</h4>
            <p class="text-gray-600 mb-4">Join industry leaders for a day of insights and networking</p>
            <div class="flex items-center justify-between">
              <span class="text-indigo-600 font-bold">$299</span>
              <button class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">Book Now</button>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow">
          <div class="relative">
            <img class="w-full h-48 object-cover" src="https://storage.googleapis.com/uxpilot-auth.appspot.com/ddad521685-c419be52d590c18caf33.png" alt="music festival with crowd and colorful stage lights, vibrant atmosphere" >
            <span class="absolute top-4 right-4 bg-red-500 text-white px-3 py-1 rounded-full text-sm">Featured</span>
          </div>
          <div class="p-6">
            <div class="flex items-center text-sm text-gray-500 mb-2">
              <i class="fa-regular fa-calendar mr-2"></i>
              <span>Apr 20, 2025</span>
              <i class="fa-solid fa-location-dot ml-4 mr-2"></i>
              <span>Los Angeles</span>
            </div>
            <h4 class="text-xl font-bold mb-2">Summer Music Festival</h4>
            <p class="text-gray-600 mb-4">Three days of non-stop music and entertainment</p>
            <div class="flex items-center justify-between">
              <span class="text-indigo-600 font-bold">$149</span>
              <button class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">Book Now</button>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow">
          <div class="relative">
            <img class="w-full h-48 object-cover" src="https://storage.googleapis.com/uxpilot-auth.appspot.com/bf9e61a32d-9c688cff5d21b71601d4.png" alt="food and wine tasting event with elegant setup and people sampling dishes" >
            <span class="absolute top-4 right-4 bg-red-500 text-white px-3 py-1 rounded-full text-sm">Featured</span>
          </div>
          <div class="p-6">
            <div class="flex items-center text-sm text-gray-500 mb-2">
              <i class="fa-regular fa-calendar mr-2"></i>
              <span>May 5, 2025</span>
              <i class="fa-solid fa-location-dot ml-4 mr-2"></i>
              <span>New York</span>
            </div>
            <h4 class="text-xl font-bold mb-2">Food & Wine Festival</h4>
            <p class="text-gray-600 mb-4">Experience culinary excellence and wine tasting</p>
            <div class="flex items-center justify-between">
              <span class="text-indigo-600 font-bold">$89</span>
              <button class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">Book Now</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="upcoming-events" class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center mb-8">
        <h3 class="text-2xl font-bold">Upcoming Events</h3>
        <div class="flex gap-2">
          <button class="px-4 py-2 border rounded-lg hover:bg-gray-50">
            <i class="fa-solid fa-arrow-left"></i>
          </button>
          <button class="px-4 py-2 border rounded-lg hover:bg-gray-50">
            <i class="fa-solid fa-arrow-right"></i>
          </button>
        </div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white rounded-lg border hover:shadow-md transition-shadow">
          <div class="p-4">
            <div class="text-sm text-gray-500 mb-2">
              <i class="fa-regular fa-calendar mr-2"></i>
              <span>Jun 10, 2025</span>
            </div>
            <h4 class="font-bold mb-2">Design Workshop</h4>
            <p class="text-gray-600 text-sm mb-4">Learn from top designers</p>
            <div class="flex items-center justify-between">
              <span class="text-indigo-600 font-bold">$49</span>
              <span class="text-sm text-gray-500">
                <i class="fa-solid fa-location-dot mr-1"></i>Online
              </span>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-lg border hover:shadow-md transition-shadow">
          <div class="p-4">
            <div class="text-sm text-gray-500 mb-2">
              <i class="fa-regular fa-calendar mr-2"></i>
              <span>Jun 15, 2025</span>
            </div>
            <h4 class="font-bold mb-2">Startup Meetup</h4>
            <p class="text-gray-600 text-sm mb-4">Network with entrepreneurs</p>
            <div class="flex items-center justify-between">
              <span class="text-indigo-600 font-bold">Free</span>
              <span class="text-sm text-gray-500">
                <i class="fa-solid fa-location-dot mr-1"></i>Chicago
              </span>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-lg border hover:shadow-md transition-shadow">
          <div class="p-4">
            <div class="text-sm text-gray-500 mb-2">
              <i class="fa-regular fa-calendar mr-2"></i>
              <span>Jun 20, 2025</span>
            </div>
            <h4 class="font-bold mb-2">Art Exhibition</h4>
            <p class="text-gray-600 text-sm mb-4">Contemporary art showcase</p>
            <div class="flex items-center justify-between">
              <span class="text-indigo-600 font-bold">$25</span>
              <span class="text-sm text-gray-500">
                <i class="fa-solid fa-location-dot mr-1"></i>Miami
              </span>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-lg border hover:shadow-md transition-shadow">
          <div class="p-4">
            <div class="text-sm text-gray-500 mb-2">
              <i class="fa-regular fa-calendar mr-2"></i>
              <span>Jun 25, 2025</span>
            </div>
            <h4 class="font-bold mb-2">Fitness Workshop</h4>
            <p class="text-gray-600 text-sm mb-4">Get fit with experts</p>
            <div class="flex items-center justify-between">
              <span class="text-indigo-600 font-bold">$35</span>
              <span class="text-sm text-gray-500">
                <i class="fa-solid fa-location-dot mr-1"></i>Seattle
              </span>
            </div>
          </div>
        </div>
      </div>
      <div class="text-center mt-8">
        <button class="px-6 py-3 bg-white border border-indigo-600 text-indigo-600 rounded-lg hover:bg-indigo-50">
          Load More Events
        </button>
      </div>
    </div>
  </section>
{% endblock %}