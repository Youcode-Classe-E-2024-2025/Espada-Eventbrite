 {% extends "base.html.twig" %}
{% block title %}ESPADA{% endblock %}
{% block header %} {% include "layouts/header.html.twig" %}  {% endblock %}
{% block content %}
  <section id="hero" class="pt-24 pb-12 bg-gradient-to-r from-indigo-500 to-purple-600">
    <div class="container mx-auto px-4">
      <div class="text-center mb-8">
        <h2 class="text-4xl font-bold text-white mb-4">Discover Amazing Events</h2>
        <p class="text-white/80 text-lg">Find and join events that match your interests</p>
      </div>
      <div class="max-w-3xl mx-auto">
        <div class="bg-white rounded-xl shadow-lg p-4">
          <div class="flex flex-col md:flex-row gap-4">
            <div class="flex-1">
              <form action='events/search' method='get' class="relative">
                <i class="fa-solid fa-search absolute left-3 top-3 text-gray-400"></i>
                <input type="text" name="keyword" placeholder="Search events..." class="w-full pl-10 pr-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
              </form>
            </div>
            <div class="flex gap-2">
              <button class="px-4 py-2 border rounded-lg hover:bg-gray-50">
                <i class="fa-solid fa-calendar-days mr-2"></i>Date
              </button>
              <button id="location-btn" class="px-4 py-2 border rounded-lg hover:bg-gray-50">
                <i class="fa-solid fa-location-dot mr-2"></i>Location
              </button>
              <button class="px-4 py-2 border rounded-lg hover:bg-gray-50">
                <i class="fa-solid fa-tag mr-2"></i>Category
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
   <!-- Location Selection Modal -->
  <div id="location-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center">
    <div class="bg-white rounded-xl p-8 w-full max-w-lg mx-4">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold">Select Location</h2>
        <button id="close-location-modal" class="text-gray-500 hover:text-gray-700">
          <i class="fa-solid fa-times text-2xl"></i>
        </button>
      </div>
      <div class="mb-4">
       <select class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500">
       {% for location in locations %}
       <option >{{location.name.common}}</option>
       {% endfor %}
       </select>
      </div>
      <div id="location-list" class="max-h-80 overflow-y-auto grid grid-cols-3 gap-2">
        <!-- Locations will be dynamically populated here -->
      </div>
      <div class="mt-6 flex justify-end space-x-4">
        <button id="cancel-location" class="px-4 py-2 border rounded-lg hover:bg-gray-50">Cancel</button>
        <button id="confirm-location" class="px-4 py-2 bg-indigo-500 text-white rounded-lg hover:bg-indigo-600">Confirm</button>
      </div>
    </div>
  </div>
  <section id="featured-events" class="py-12">
    <div class="container mx-auto px-4">
      <h3 class="text-2xl font-bold mb-8">Lasts 3 Events</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {% for event in events  %}
        <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow">
          <div class="relative">
            <img class="w-full h-48 object-cover" src="{{event.visual_content}}" alt="tech conference event with people networking in a modern venue, professional photography" >
           <span class="absolute top-4 right-4 bg-gray-500 text-white px-3 py-1 rounded-full text-sm">
                    <i class="fa-solid {{event.icon}} mr-1"></i>{{event.category}}
                </span>
          </div>
          <div class="p-6">
            <div class="flex items-center text-sm text-gray-500 mb-2">
              <i class="fa-regular fa-calendar mr-2"></i>
              <span>{{event.date|date("F j, Y")}}</span>
              <i class="fa-solid fa-location-dot ml-4 mr-2"></i>
              <span>{{event.lieu}}</span>
            </div>
            <h4 class="text-xl font-bold mb-2">{{event.title}}</h4>
            <p class="text-gray-600 mb-4">{{event.description|striptags|slice(0, 20)}}...</p>
            <div class="flex items-center justify-between">
              <a href="/auth#signin-form" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">Book Now</a>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>
  <section id="upcoming-events" class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center mb-8">
        <h3 class="text-2xl font-bold">Upcoming Events</h3>
        <div class="flex gap-2">
          <button class="px-4 py-2 border rounded-lg hover:bg-gray-50">
            <i class="fa-solid fa-arrow-left"></i>
          </button>
          <button class="px-4 py-2 border rounded-lg hover:bg-gray-50">
            <i class="fa-solid fa-arrow-right"></i>
          </button>
        </div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white rounded-lg border hover:shadow-md transition-shadow">
          <div class="p-4">
            <div class="text-sm text-gray-500 mb-2">
              <i class="fa-regular fa-calendar mr-2"></i>
              <span>Jun 10, 2025</span>
            </div>
            <h4 class="font-bold mb-2">Design Workshop</h4>
            <p class="text-gray-600 text-sm mb-4">Learn from top designers</p>
            <div class="flex items-center justify-between">
              <span class="text-indigo-600 font-bold">$49</span>
              <span class="text-sm text-gray-500">
                <i class="fa-solid fa-location-dot mr-1"></i>Online
              </span>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-lg border hover:shadow-md transition-shadow">
          <div class="p-4">
            <div class="text-sm text-gray-500 mb-2">
              <i class="fa-regular fa-calendar mr-2"></i>
              <span>Jun 15, 2025</span>
            </div>
            <h4 class="font-bold mb-2">Startup Meetup</h4>
            <p class="text-gray-600 text-sm mb-4">Network with entrepreneurs</p>
            <div class="flex items-center justify-between">
              <span class="text-indigo-600 font-bold">Free</span>
              <span class="text-sm text-gray-500">
                <i class="fa-solid fa-location-dot mr-1"></i>Chicago
              </span>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-lg border hover:shadow-md transition-shadow">
          <div class="p-4">
            <div class="text-sm text-gray-500 mb-2">
              <i class="fa-regular fa-calendar mr-2"></i>
              <span>Jun 20, 2025</span>
            </div>
            <h4 class="font-bold mb-2">Art Exhibition</h4>
            <p class="text-gray-600 text-sm mb-4">Contemporary art showcase</p>
            <div class="flex items-center justify-between">
              <span class="text-indigo-600 font-bold">$25</span>
              <span class="text-sm text-gray-500">
                <i class="fa-solid fa-location-dot mr-1"></i>Miami
              </span>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-lg border hover:shadow-md transition-shadow">
          <div class="p-4">
            <div class="text-sm text-gray-500 mb-2">
              <i class="fa-regular fa-calendar mr-2"></i>
              <span>Jun 25, 2025</span>
            </div>
            <h4 class="font-bold mb-2">Fitness Workshop</h4>
            <p class="text-gray-600 text-sm mb-4">Get fit with experts</p>
            <div class="flex items-center justify-between">
              <span class="text-indigo-600 font-bold">$35</span>
              <span class="text-sm text-gray-500">
                <i class="fa-solid fa-location-dot mr-1"></i>Seattle
              </span>
            </div>
          </div>
        </div>
      </div>
      <div class="text-center mt-8">
        <a href="/events/list" class="px-6 py-3 bg-white border border-indigo-600 text-indigo-600 rounded-lg hover:bg-indigo-50">
          Load More Events
        </a>
      </div>
    </div>
  </section>
{% endblock %}
{% block footer %} {% include "layouts/footer.html.twig" %}  {% endblock %}