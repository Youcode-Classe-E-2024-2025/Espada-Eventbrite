{% extends "base.html.twig" %}
{% block content %}
              <body class="h-full text-base-content">
                <div id="dashboard" class="bg-gray-50">
    <header id="header" class="bg-white border-b border-gray-200 fixed w-full z-50">
        <div class="px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
            <div class="flex items-center gap-3">
                <button class="lg:hidden p-2 hover:bg-gray-100 rounded-lg">
                    <i class="fa-solid fa-bars text-gray-600"></i>
                </button>
                <h1 class="text-xl font-semibold text-gray-900">Event Manager</h1>
            </div>
            <div class="flex items-center gap-4">
                <button class="p-2 hover:bg-gray-100 rounded-full">
                    <i class="fa-regular fa-bell text-gray-600"></i>
                </button>
                <img src="https://storage.googleapis.com/uxpilot-auth.appspot.com/avatars/avatar-1.jpg" class="w-8 h-8 rounded-full"/>
            </div>
        </div>
    </header>
    <div class="flex h-[100vh] pt-[68px]">
        <aside id="sidebar" class="hidden lg:flex flex-col w-64 border-r border-gray-200 bg-white">
            <div class="p-4 space-y-4">
                <button class="w-full bg-indigo-600 text-white px-4 py-2 rounded-lg flex items-center justify-center gap-2">
                    <i class="fa-solid fa-plus"></i>
                    <span>Create New Event</span>
                </button>
                <nav class="space-y-1">
                    <a href="#" class="flex items-center gap-3 px-3 py-2 text-gray-900 bg-gray-100 rounded-lg">
                        <i class="fa-solid fa-chart-line w-5"></i>
                        <span>Dashboard</span>
                    </a>
                    <a href="#" class="flex items-center gap-3 px-3 py-2 text-gray-600 hover:bg-gray-50 rounded-lg">
                        <i class="fa-solid fa-calendar w-5"></i>
                        <span>Events</span>
                    </a>
                    <a href="#" class="flex items-center gap-3 px-3 py-2 text-gray-600 hover:bg-gray-50 rounded-lg">
                        <i class="fa-solid fa-ticket w-5"></i>
                        <span>Tickets</span>
                    </a>
                    <a href="#" class="flex items-center gap-3 px-3 py-2 text-gray-600 hover:bg-gray-50 rounded-lg">
                        <i class="fa-solid fa-tag w-5"></i>
                        <span>Promotions</span>
                    </a>
                    <a href="#" class="flex items-center gap-3 px-3 py-2 text-gray-600 hover:bg-gray-50 rounded-lg">
                        <i class="fa-solid fa-gear w-5"></i>
                        <span>Settings</span>
                    </a>
                </nav>
            </div>
        </aside>
        <main id="main-content" class="flex-1 overflow-auto">
            <div class="p-6 space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div class="bg-white p-6 rounded-xl border border-gray-200">
                        <div class="flex items-center justify-between">
                            <h3 class="text-sm font-medium text-gray-500">Total Events</h3>
                            <i class="fa-solid fa-calendar text-indigo-600"></i>
                        </div>
                        <p class="text-2xl font-semibold mt-2">24</p>
                    </div>
                    <div class="bg-white p-6 rounded-xl border border-gray-200">
                        <div class="flex items-center justify-between">
                            <h3 class="text-sm font-medium text-gray-500">Active Events</h3>
                            <i class="fa-solid fa-circle-play text-green-600"></i>
                        </div>
                        <p class="text-2xl font-semibold mt-2">8</p>
                    </div>
                    <div class="bg-white p-6 rounded-xl border border-gray-200">
                        <div class="flex items-center justify-between">
                            <h3 class="text-sm font-medium text-gray-500">Total Sales</h3>
                            <i class="fa-solid fa-dollar-sign text-blue-600"></i>
                        </div>
                        <p class="text-2xl font-semibold mt-2">$12,450</p>
                    </div>
                    <div class="bg-white p-6 rounded-xl border border-gray-200">
                        <div class="flex items-center justify-between">
                            <h3 class="text-sm font-medium text-gray-500">Total Attendees</h3>
                            <i class="fa-solid fa-users text-purple-600"></i>
                        </div>
                        <p class="text-2xl font-semibold mt-2">1,240</p>
                    </div>
                </div>
                <div class="bg-white rounded-xl border border-gray-200">
                    <div class="p-6 border-b border-gray-200">
                        <div class="flex items-center justify-between">
                            <h2 class="text-lg font-semibold">Recent Events</h2>
                            <div class="flex items-center gap-2">
                                <button class="px-3 py-1.5 text-sm border border-gray-300 rounded-lg hover:bg-gray-50">
                                    <i class="fa-solid fa-file-csv mr-2"></i>Export CSV
                                </button>
                                <button class="px-3 py-1.5 text-sm border border-gray-300 rounded-lg hover:bg-gray-50">
                                    <i class="fa-solid fa-file-pdf mr-2"></i>Export PDF
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event Name</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sales</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <tr>
                                    <td class="px-6 py-4">
                                        <div class="flex items-center">
                                            <div class="h-10 w-10 rounded-lg bg-indigo-100 flex items-center justify-center">
                                                <i class="fa-solid fa-music text-indigo-600"></i>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-medium text-gray-900">Summer Music Festival</div>
                                                <div class="text-sm text-gray-500">Los Angeles, CA</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-500">Aug 15, 2025</td>
                                    <td class="px-6 py-4">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Active</span>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-500">$4,200</td>
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-2">
                                            <button class="p-2 hover:bg-gray-100 rounded-lg">
                                                <i class="fa-solid fa-pen-to-square text-gray-400"></i>
                                            </button>
                                            <button class="p-2 hover:bg-gray-100 rounded-lg">
                                                <i class="fa-solid fa-trash text-gray-400"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="px-6 py-4">
                                        <div class="flex items-center">
                                            <div class="h-10 w-10 rounded-lg bg-purple-100 flex items-center justify-center">
                                                <i class="fa-solid fa-graduation-cap text-purple-600"></i>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-medium text-gray-900">Tech Conference 2025</div>
                                                <div class="text-sm text-gray-500">San Francisco, CA</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-500">Sep 20, 2025</td>
                                    <td class="px-6 py-4">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Pending</span>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-500">$8,250</td>
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-2">
                                            <button class="p-2 hover:bg-gray-100 rounded-lg">
                                                <i class="fa-solid fa-pen-to-square text-gray-400"></i>
                                            </button>
                                            <button class="p-2 hover:bg-gray-100 rounded-lg">
                                                <i class="fa-solid fa-trash text-gray-400"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="bg-white rounded-xl border border-gray-200">
                    <div class="p-6 border-b border-gray-200">
                        <div class="flex items-center justify-between">
                            <h2 class="text-lg font-semibold">Active Promotions</h2>
                            <button class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">
                                <i class="fa-solid fa-plus mr-2"></i>New Promotion
                            </button>
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div class="p-4 border border-gray-200 rounded-lg">
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-sm font-medium text-gray-900">SUMMER2025</span>
                                    <span class="text-sm font-medium text-green-600">Active</span>
                                </div>
                                <div class="text-2xl font-bold text-indigo-600 mb-2">25% OFF</div>
                                <div class="text-sm text-gray-500">Valid until Aug 31, 2025</div>
                            </div>
                            <div class="p-4 border border-gray-200 rounded-lg">
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-sm font-medium text-gray-900">EARLYBIRD</span>
                                    <span class="text-sm font-medium text-green-600">Active</span>
                                </div>
                                <div class="text-2xl font-bold text-indigo-600 mb-2">$50 OFF</div>
                                <div class="text-sm text-gray-500">Valid until Jul 15, 2025</div>
                            </div>
                            <div class="p-4 border border-gray-200 rounded-lg">
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-sm font-medium text-gray-900">GROUP10</span>
                                    <span class="text-sm font-medium text-yellow-600">Pending</span>
                                </div>
                                <div class="text-2xl font-bold text-indigo-600 mb-2">10% OFF</div>
                                <div class="text-sm text-gray-500">Starting Sep 1, 2025</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
              </body>
            </html>
          
{% endblock %}